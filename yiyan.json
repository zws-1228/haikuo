function getColor(){
var colors = [
"#83559e",
"#ff7512",
"#cb54ff",
"#ff5358",
"#ff9044",
"#7678ff",
"#34b1ff",
];//颜色可自行添加
return colors[Math.floor(Math.random() * colors.length)]//返回随机颜色
}
